<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_executedialog_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:text="Enter the file name"
        android:textSize="18dp" />

    <AutoCompleteTextView
        android:id="@+id/edit_executedialog_filename"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_executedialog_text"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@color/app_edittext_color"
        android:hint="File name"
        android:inputType="textPersonName|text" />

</RelativeLayout>